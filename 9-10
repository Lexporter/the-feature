package helloJava;
import java.util.*;
public class haha {

	public static void main(String[] args) {
		/*Create a circle with radius 1*/
		CircleWithPrivareDataFields myCircle = new CircleWithPrivareDataFields(1);
		
		// Print areas for radius 1, 2, 3, 4, and 5.
		int n =5;
		printArea(myCircle, n);
		
		//See myCircle.radius and times
		 System.out.println("\nRadius is " +myCircle.getRadius());
		 System.out.println("n is " + n);
	}
	
	/*Print a table of areas for radius*/
	public static void printArea(CircleWithPrivareDataFields c, int times) {
		System.out.println("Radius \t\tArea");
		while(times >= 1) {
			System.out.println(c.getRadius() + "\t\t" + c.getArea());
			c.setRadius(c.getRadius() + 1);
			times--;
		}
	}
}
	 
